<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

   <RelativeLayout
       android:id="@+id/login_layout"
       android:layout_marginTop="@dimen/dp_25"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_30"

       >
       <ImageView
           android:id="@+id/login_return"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:src="@mipmap/icon_left_finish"
           android:layout_marginLeft="@dimen/dp_10"
           />
       <ImageView
           android:id="@+id/login_seeting"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:src="@mipmap/icon_setting"
           android:layout_marginRight="@dimen/dp_10"
           android:layout_alignParentRight="true"/>
   </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_layout2"
        android:layout_below="@id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iocn_login_logo"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/login_linearLayout"
        android:layout_below="@id/login_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <EditText
        android:id="@+id/login_phoneEt"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/colorWhite"
        android:hint="艺线账号/手机号码"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/colorBlack"
        android:layout_marginTop="@dimen/dp_5"/>

    <EditText
        android:id="@+id/login_pswEt"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/colorWhite"
        android:hint="密码"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/colorBlack"
        android:layout_marginTop="@dimen/dp_5"/>

    <TextView
        android:id="@+id/notlogin_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无法登录？"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="@color/colorPrimary"
        />
    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_below="@id/login_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="vertical"
        android:text="登录"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/colorWhite"
        android:background="@drawable/login_shape"
        android:layout_margin="@dimen/dp_20"
        >
    </Button>
    <LinearLayout
        android:id="@+id/login_linearLayout2"
        android:orientation="horizontal"
        android:layout_below="@id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15">
        <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="@color/colorGray"></View>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="@dimen/dp_10"
       android:text="其他登陆方式"/>
        <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@color/colorGray"></View>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/login_linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:id="@+id/login_weiXinBtu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_login_wechat"
           />
        <ImageView
            android:id="@+id/login_qqBtu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_login_qq"
            android:layout_marginLeft="@dimen/dp_20"/>
        <ImageView
            android:id="@+id/login_phoneBtu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_login_phone"
            android:layout_marginLeft="@dimen/dp_20"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_regiter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即注册"
            android:textColor="@color/colorBlack"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_right_arrow"
            android:layout_marginLeft="@dimen/dp_5"/>

    </LinearLayout>


</RelativeLayout>

