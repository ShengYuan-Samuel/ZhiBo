<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.live.fragment.TianZhanFragment">

    <LinearLayout
        android:layout_marginTop="110dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/icon_challenge_typ_oneback"
            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/icon_challenge_type_singe" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/colorWhite"
                android:text="唱歌"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/colorWhite"
                android:textSize="8sp"

                android:text="展示天籁之音，做认证主播"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/icon_challenge_typ_oneback"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/icon_challenge_type_rap" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/colorWhite"
                android:text="Rap"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/colorWhite"
                android:textSize="8sp"
                android:text="用嘻哈诉说你的故事"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/icon_challenge_typ_oneback"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/icon_challenge_type_dance" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/colorWhite"
                android:text="跳舞"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/colorWhite"
                android:textSize="8sp"
                android:text="跳一跳，十年少"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/icon_challenge_typ_oneback"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/icon_challenge_type_music" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/colorWhite"
                android:text="乐器"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/colorWhite"
                android:textSize="8sp"

                android:text="多才多艺你还在等什么"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/icon_challenge_typ_oneback"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/icon_challenge_type_perform" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/colorWhite"
                android:text="表演"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/colorWhite"
                android:textSize="8sp"

                android:text="演绎你的人生"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/icon_challenge_typ_oneback"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/icon_challenge_type_eloquence" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/colorWhite"
                android:text="口才"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/colorWhite"
                android:textSize="8sp"
                android:text="说话也是一门艺术"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>