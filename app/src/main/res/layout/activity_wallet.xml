<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
       android:layout_marginTop="@dimen/dp_25"

        >
        <ImageView
            android:id="@+id/pay_finish"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_left_finish"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:text="充值"
            />
        <TextView
            android:id="@+id/pay_tixian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            />

    </RelativeLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="150dp"
       android:orientation="horizontal">
      <ImageView
          android:id="@+id/pay_photo"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:layout_marginLeft="@dimen/dp_20"
        android:layout_centerVertical="true"
          android:src="@mipmap/iocn_login_logo"
          />
      <LinearLayout
          android:layout_marginLeft="@dimen/dp_10"
          android:layout_above="@id/pay_photo"
          android:layout_toRightOf="@id/pay_photo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/colorBlack"
             android:text="账户："/>
         <TextView
             android:id="@+id/pay_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/colorBlack"
             android:text="独奏你改"/>

      </LinearLayout>
      <LinearLayout
          android:layout_marginLeft="@dimen/dp_10"
          android:layout_toRightOf="@id/pay_photo"
          android:layout_centerVertical="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
         <TextView
             android:layout_width="wrap_content"
             android:textColor="@color/colorBlack"
             android:layout_height="wrap_content"
             android:text="可用余额："/>
         <TextView
             android:id="@+id/pay_keyong_yue"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/colorBlack"
             android:text="0艺币"/>

      </LinearLayout>
      <LinearLayout
          android:layout_marginLeft="@dimen/dp_10"
          android:layout_below="@id/pay_photo"
          android:layout_toRightOf="@id/pay_photo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/colorBlack"
             android:text="可提余额："/>
         <TextView
             android:id="@+id/pay_keti_yue"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/colorBlack"
             android:text="0艺币"/>

      </LinearLayout>
      <LinearLayout
          android:id="@+id/pay_chongzhijilv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_above="@id/pay_photo"
          android:layout_alignParentRight="true"
          android:layout_marginRight="@dimen/dp_10"
          >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="充值记录"

             android:layout_marginTop="7dp"
             />
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@mipmap/icon_right_arrow"
             android:layout_marginLeft="5dp"
             android:layout_marginTop="10dp"
             />

      </LinearLayout>
   </RelativeLayout>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="请选择充值金额"
       android:layout_marginLeft="@dimen/dp_10"/>

   <android.support.v7.widget.RecyclerView
       android:id="@+id/pay_recycler"
       android:layout_marginTop="@dimen/dp_20"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

   </android.support.v7.widget.RecyclerView>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="请选择充值方式"
       android:layout_marginLeft="@dimen/dp_10"/>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/dp_10"
       android:layout_marginLeft="@dimen/dp_10"
       android:orientation="horizontal">
      <TextView
          android:id="@+id/pay_zhifubao"
          android:layout_width="100dp"
          android:layout_height="@dimen/dp_40"
          android:padding="@dimen/dp_10"
          android:drawableLeft="@drawable/chzh_zhifubao"
          android:text="支付宝"
          android:background="@drawable/pay_select"
          android:gravity="center"/>

      <TextView
          android:id="@+id/pay_weixin"
          android:layout_width="100dp"
          android:layout_height="@dimen/dp_40"
          android:padding="@dimen/dp_10"
          android:drawableLeft="@drawable/chzh_weixin"
          android:text="微信"
          android:background="@drawable/pay_select"
          android:layout_marginLeft="@dimen/dp_20"
          android:gravity="center"/>

   </LinearLayout>
   <Button
       android:id="@+id/pay_ok"
       android:layout_width="300dp"
       android:layout_marginTop="25dp"
       android:layout_height="45dp"
       android:background="@drawable/login_shape"
       android:text="确认充值"
       android:layout_gravity="center_horizontal"
       android:textColor="#fff"
       />

</LinearLayout> 

