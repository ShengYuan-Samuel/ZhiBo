<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:id="@+id/gift_pop">
    <RelativeLayout
        android:id="@+id/pop_relative"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/pop_txt"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:textColor="@color/colorBlack"
            android:text="艺线"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_challenge_top_gongxian"
            android:layout_toLeftOf="@+id/pop_txt"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_below="@id/pop_relative"
        android:id="@+id/popup_xian"
        android:background="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <android.support.v4.view.ViewPager
        android:layout_below="@id/popup_xian"
        android:layout_weight="8"
        android:id="@+id/gift_pager"
        android:layout_width="match_parent"
        android:layout_height="220dp">
    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:id="@+id/popup_relative"
        android:layout_below="@id/gift_pager"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <ImageView
            android:id="@+id/gift_image"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_media_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/gift_image"
            android:text="礼物"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/gift_chongzhi"
            android:layout_centerInParent="true"
            android:textColor="@color/colorRed"
            android:text="充值"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


     <LinearLayout
         android:id="@+id/zengsong_linear"
         android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="70dp"
            android:layout_height="@dimen/dp_20" >

         <TextView
             android:id="@+id/gitf_num_tv"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:text="1"
             android:textSize="8sp"
             android:background="@drawable/gitf_tv_shape"
             android:gravity="center"/>
         <TextView
             android:id="@+id/gitf_zengsongBtu"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:text="赠送"
             android:textSize="10sp"
             android:textColor="@color/colorWhite"
             android:background="@drawable/gitf_btu_shape"
             android:layout_marginRight="@dimen/dp_10"
             android:gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/popup_linear"
        android:layout_width="70dp"
        android:visibility="gone"
        android:layout_height="130dp"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/popup_relative"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/click_cheek"
        android:orientation="vertical">

        <TextView
            android:id="@+id/click_yishengyishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="1314一生一世"
            android:textSize="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e6" />

        <TextView
            android:id="@+id/click_liu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="666顺顺利利"
            android:textSize="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e6" />

        <TextView
            android:id="@+id/click_aiyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="21只爱你一人"
            android:textSize="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e6" />

        <TextView
            android:id="@+id/click_yifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="1分也是爱"
            android:textSize="8dp" />
    </LinearLayout>
</RelativeLayout>