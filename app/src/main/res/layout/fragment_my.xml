<?xml version="1.0" encoding="utf-8"?>
<!--这是我的页面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
  >
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="个人中心"
            android:textColor="@color/colorBlack"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/personage_seeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_setting"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personage_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/mind_userphoto"
            android:layout_centerVertical="true"
            android:src="@mipmap/iocn_login_logo"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:id="@+id/mind_userName"
            android:layout_toRightOf="@+id/mind_userphoto"
            android:layout_alignTop="@+id/mind_userphoto"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:text="未登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/mind_userDjImg"
            android:src="@mipmap/icon_login_qq"
            android:layout_toRightOf="@+id/mind_userphoto"
            android:layout_alignBottom="@+id/mind_userphoto"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <ImageView
            android:src="@mipmap/icon_right_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"/>
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/personage_focus_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            >
        <TextView
            android:id="@+id/personage_focus_numTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"/>
        </LinearLayout>
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/colorGray"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"/>
        <LinearLayout
            android:id="@+id/personage_fans_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            >
            <TextView
                android:id="@+id/personage_fans_numTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝"/>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="@color/colorGray">
    </View>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <LinearLayout
            android:id="@+id/mind_userChat"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:drawableTop="@drawable/icon_mind_chat"
                android:text="我的聊天"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/colorGray"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/mind_userPrivilege"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:drawableTop="@drawable/icon_mind_privilege"
                android:text="特权中心"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/colorGray"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/mind_userWallet"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:drawableTop="@drawable/icon_mind_wallet"
                android:text="我的钱包"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </LinearLayout>
    <View
        android:background="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <LinearLayout
            android:id="@+id/mind_userHelper"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:drawableTop="@drawable/icon_mind_help"
                android:text="帮助和反馈"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/colorGray"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/mind_userFans"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:drawableTop="@drawable/icon_mind_fans"
                android:text="我的粉丝团"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <View
            android:background="@color/colorGray"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrayTou"/>
</LinearLayout>